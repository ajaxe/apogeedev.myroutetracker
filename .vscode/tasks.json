{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "dependsOn": ["fe-build", "dotnet-build"],
      "dependsOrder": "parallel",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "build-launch",
      "dependsOn": ["dotnet-build"],
      "dependsOrder": "parallel",
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "dotnet-build",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/src/MyRouteTracker.Web/MyRouteTracker.Web.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "pnpm-install",
      "command": "pnpm",
      "type": "shell",
      "args": ["install"],
      "options": {
        "cwd": "${workspaceFolder}/src/MyRouteTracker.Frontend"
      }
    },
    {
      "label": "fe-build",
      "command": "pnpm",
      "type": "shell",
      "dependsOn": ["pnpm-install"],
      "args": ["quasar", "build"],
      "options": {
        "cwd": "${workspaceFolder}/src/MyRouteTracker.Frontend"
      }
    },
    {
      "label": "fe-launch",
      "command": "pnpm",
      "type": "shell",
      "dependsOn": ["pnpm-install"],
      "args": ["quasar", "dev"],
      "options": {
        "cwd": "${workspaceFolder}/src/MyRouteTracker.Frontend"
      }
    },
    {
      "label": "publish",
      "command": "dotnet",
      "type": "process",
      "args": [
        "publish",
        "${workspaceFolder}/src/MyRouteTracker.Web/MyRouteTracker.Web.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "watch",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "${workspaceFolder}/src/MyRouteTracker.Web/MyRouteTracker.Web.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    }
  ]
}
