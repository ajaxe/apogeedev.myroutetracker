@model RouteDataSetListViewModel

@{
    ViewData["Title"] = "Captured routes";
}

<div class="">
    <h1 class="display-6">Captured Routes</h1>
</div>
<div>
    <a class="btn btn-link" role="button" asp-controller="TrackerView" asp-action="Start">
        <i class="bi bi-plus"></i> Start route
    </a>
</div>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Mode</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var app in Model.Routes)
        {
            <tr>
                <td><a asp-controller="TrackerView" asp-action="Details" asp-route-trackerId="@app.Id">@app.Name</a>
                </td>
                <td>@app.Mode</td>
                <td>
                    <a class="btn btn-link" href="#" role="button">Delete</a>
                    <a class="btn btn-link" hx-get hx-controller="TrackerView" hx-action="Start"
                        hx-route-trackerId="@app.Id" hx-target="#collector-wrapper" role="button">Restart</a>
                </td>
            </tr>
        }

    </tbody>
</table>
